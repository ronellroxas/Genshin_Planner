<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#66000000"
    android:backgroundTintMode="src_over"
    tools:context=".activities.ViewProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left_char_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right_char_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bot_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bot_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bot_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bot_talent_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_rounded_rectangle_dark"
        app:layout_constraintBottom_toTopOf="@+id/gl_top_materials"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_main"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gl_left_main"
        app:layout_constraintTop_toTopOf="@+id/gl_bot_char"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tv_view_char_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/sample_name"
            android:textColor="@color/base"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_view_char_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sample_stars"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toBottomOf="@+id/tv_view_char_element" />

        <TextView
            android:id="@+id/tv_view_char_weap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/sample_weap"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toBottomOf="@+id/tv_view_char_name" />

        <TextView
            android:id="@+id/label_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rarity"
            android:textColor="@color/base"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_view_char_rarity"
            app:layout_constraintEnd_toEndOf="@+id/label_element"
            app:layout_constraintTop_toTopOf="@+id/tv_view_char_rarity" />

        <TextView
            android:id="@+id/tv_view_char_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sample_element"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toBottomOf="@+id/tv_view_char_weap" />

        <TextView
            android:id="@+id/label_weap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Weapon"
            android:textColor="@color/base"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_view_char_weap"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="@+id/tv_view_char_weap" />

        <TextView
            android:id="@+id/label_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Element"
            android:textColor="@color/base"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_view_char_element"
            app:layout_constraintEnd_toEndOf="@+id/label_weap"
            app:layout_constraintTop_toTopOf="@+id/tv_view_char_element" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_char_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_char"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_char_pic"
        app:layout_constraintStart_toStartOf="@+id/gl_left_char_pic"
        app:layout_constraintTop_toTopOf="@+id/gl_top_main"
        app:srcCompat="@drawable/characters_ayaka" />

    <TextView
        android:id="@+id/label_ascension_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ascension_mats"
        android:textColor="@color/base"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/gl_left_main"
        app:layout_constraintTop_toBottomOf="@id/gl_top_materials" />

    <TextView
        android:id="@+id/label_talent_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/talent_mats"
        android:textColor="@color/base"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/gl_left_main"
        app:layout_constraintTop_toTopOf="@+id/gl_bot_materials" />

    <ImageView
        android:id="@+id/iv_view_char_ele_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_materials"
        app:layout_constraintStart_toStartOf="@id/gl_left_main"
        app:layout_constraintTop_toBottomOf="@+id/label_ascension_material"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_boss_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_materials"
        app:layout_constraintStart_toEndOf="@+id/iv_view_char_ele_mat"
        app:layout_constraintTop_toBottomOf="@+id/label_ascension_material"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_world_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_materials"
        app:layout_constraintEnd_toStartOf="@+id/iv_view_char_mob_mat"
        app:layout_constraintStart_toEndOf="@+id/iv_view_char_boss_mat"
        app:layout_constraintTop_toBottomOf="@+id/label_ascension_material"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_mob_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_materials"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_main"
        app:layout_constraintTop_toBottomOf="@+id/label_ascension_material"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_tal_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_talent_materials"
        app:layout_constraintStart_toStartOf="@+id/gl_left_main"
        app:layout_constraintTop_toBottomOf="@+id/label_talent_material"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_week_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_talent_materials"
        app:layout_constraintStart_toEndOf="@+id/iv_view_char_tal_mat"
        app:layout_constraintTop_toBottomOf="@+id/label_talent_material"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_crown"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_talent_materials"
        app:layout_constraintEnd_toStartOf="@+id/iv_view_char_tal_mob_mat"
        app:layout_constraintStart_toEndOf="@+id/iv_view_char_week_mat"
        app:layout_constraintTop_toBottomOf="@+id/label_talent_material"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/iv_view_char_tal_mob_mat"
        android:layout_width="87dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bot_talent_materials"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_main"
        app:layout_constraintTop_toBottomOf="@+id/label_talent_material"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>